<% provide(:title,"Edit user") %>
<h1>Update your profire</h1>

<div class="row">
 <div class="col-md-6 col-md-offset-3">
  <% form_for(@user) do |f| %>
   <%= render 'shared/error_messages' %>
   
   <%= f.label :name %>
   <%= f.text_find :name, class: 'form-control'  %>
   
   <%= f.label :email %>
   <%= f.text_find :email, class: 'form-control' %>

   <%= f.label :password %>
   <%= f.text_find :password, class: 'form-control' %>

   <%= f.label :password_confirmation,"Confirmation" %>
   <%= f.password_find :password_confirmation, class: 'form-control'%>

   <%= f.submit "Save changes",class: "btn brn-primary" %>
  <% end %>

  <div class="gravatar_edit">
   <%= gravatar_for @user %>
   <a href="http://gravatar.com/emails" target="__blank">change</a>
  </div>
 </div>
</div>